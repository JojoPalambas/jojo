program:                            inst_list

inst_list:                          %empty
                                  | scinst + inst_list

scinst:                             inst + ';'

inst:                               basic_inst
                                  | control_inst
                                  | assign
                                  | '{' + inst_list + '}'

control_inst:                       if_inst
                                  | switch_inst
                                  | while_inst
                                  | do_while_inst
                                  | for_inst

if_inst:                            'if' + '(' + inst + ')' + scinst
                                        + else_clause

else_clause:                        %empty
                                  | 'elif' + '(' + inst + ')' + scinst
                                        + else_clause
                                  | 'else' + inst








program:                            instruction_list

instruction_list:                   instruction
                                  | scinstruction + instruction_list

scinstruction:                      instruction + ';'

maybe_semi_columned_instruction:    scinstruction
                                  | instruction

emptiable_instruction:              %empty
                                  | instruction

instruction:                        control_structure_instruction
                                  | assignment
                                  | '{' + instruction_pack + '}'

control_structure_instruction:      basic_instruction
                                  | if_instruction
                                  | switch_instruction
                                  | while_instruction
                                  | do_while_instruction
                                  | for_instruction

if_instruction:                     'if' + '(' + emptiable_instruction + ')'
                                        + instruction + elif_clause

elif_clause:                        %empty
                                  | 'elif' + '(' emptiable_instruction + ')'
                                        + elif_clause
                                  | 'else' + instruction

while_instruction:                  'while' + '(' + instruction + ')'
                                        + instruction

do_while






if (inst)
if (inst; inst)

inst; { inst; inst; }; inst

inst doit avoir un ;
dans les parenthèses du if on doit pouvoir ne pas mettre le ;
l'instruction avant un ; doit pouvoir être vide
